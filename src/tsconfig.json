{
    "compilerOptions": {
        "target": "es3",
        "module": "commonjs",
        "jsx": "preserve",
        "lib": ["dom", "es2019"],
        "baseUrl": ".",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "isolatedModules": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "paths": {
            "@shelpers/*": ["server/helpers/*"],
            "@smodel/*": ["server/app/Model/*"],
            "@svendor/*": ["server/vendor/*"],
            "@sconfig/*": ["server/config/*"],
            "@stypes/*": ["server/app/Types/*"],
            "@sexceptions/*": ["server/app/Exceptions/*"],
            "@scontroller/*": ["server/app/Controllers/*"],
            "@svalidator/*": ["server/app/Validator/*"],
            "@smiddleware/*": ["server/app/Middleware/*"],
            "@sservice/*": ["server/app/Service/*"],
            "@squeue/*": ["server/app/Queue/*"]
        },
    },
    "exclude": ["dist", ".next", "out", "next.config.js"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
